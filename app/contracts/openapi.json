{
  "openapi": "3.1.0",
  "info": {
    "title": "Powerlifting API",
    "description": "API for managing athletes and records",
    "version": "1.0.0"
  },
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "System"
        ],
        "summary": "Health Check",
        "operationId": "health_check_health_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/v1/athletes": {
      "get": {
        "tags": [
          "Athletes"
        ],
        "summary": "Get All Athletes",
        "description": "Returns the full list of powerlifters",
        "operationId": "get_all_athletes_v1_athletes_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/Athlete"
                  },
                  "type": "array",
                  "title": "Response Get All Athletes V1 Athletes Get"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Create Athlete",
        "description": "Register a new athlete in the system",
        "operationId": "create_athlete_v1_athletes_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AthleteCreate"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Athlete"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        },
        "security": [
          {
            "APIKeyHeader": []
          }
        ]
      }
    },
    "/v1/athletes/search": {
      "get": {
        "tags": [
          "Queries"
        ],
        "summary": "Search Athlete By Name",
        "description": "Search athletes by name or last name",
        "operationId": "search_athlete_by_name_v1_athletes_search_get",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "description": "Name or partial name of the athlete",
              "title": "Name"
            },
            "description": "Name or partial name of the athlete"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Athlete"
                  },
                  "title": "Response Search Athlete By Name V1 Athletes Search Get"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/v1/athletes/category/{weight_class}": {
      "get": {
        "tags": [
          "Queries"
        ],
        "summary": "Get By Weight Class",
        "description": "Filter athletes by weight class (e.g., 120kg+, 83kg)",
        "operationId": "get_by_weight_class_v1_athletes_category__weight_class__get",
        "parameters": [
          {
            "name": "weight_class",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Weight Class"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Athlete"
                  },
                  "title": "Response Get By Weight Class V1 Athletes Category  Weight Class  Get"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/v1/athletes/{athlete_id}": {
      "get": {
        "tags": [
          "Athletes"
        ],
        "summary": "Get Athlete",
        "description": "Find a specific athlete by their unique ID",
        "operationId": "get_athlete_v1_athletes__athlete_id__get",
        "parameters": [
          {
            "name": "athlete_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "title": "Athlete Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Athlete"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Admin"
        ],
        "summary": "Delete Athlete",
        "description": "Remove an athlete from the database",
        "operationId": "delete_athlete_v1_athletes__athlete_id__delete",
        "security": [
          {
            "APIKeyHeader": []
          }
        ],
        "parameters": [
          {
            "name": "athlete_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "title": "Athlete Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/v1/reset": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Reset Db",
        "description": "Restore the database to the original 5 default athletes",
        "operationId": "reset_db_v1_reset_post",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Athlete": {
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "category": {
            "type": "string",
            "title": "Category"
          },
          "age": {
            "type": "integer",
            "title": "Age"
          },
          "country": {
            "type": "string",
            "title": "Country"
          },
          "achievements": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Achievements",
            "default": []
          },
          "id": {
            "type": "integer",
            "title": "Id"
          },
          "records": {
            "items": {
              "$ref": "#/components/schemas/Lift"
            },
            "type": "array",
            "title": "Records",
            "default": []
          }
        },
        "type": "object",
        "required": [
          "name",
          "category",
          "age",
          "country",
          "id"
        ],
        "title": "Athlete"
      },
      "AthleteCreate": {
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "category": {
            "type": "string",
            "title": "Category"
          },
          "age": {
            "type": "integer",
            "title": "Age"
          },
          "country": {
            "type": "string",
            "title": "Country"
          },
          "achievements": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "title": "Achievements",
            "default": []
          }
        },
        "type": "object",
        "required": [
          "name",
          "category",
          "age",
          "country"
        ],
        "title": "AthleteCreate"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "Lift": {
        "properties": {
          "exercise": {
            "type": "string",
            "title": "Exercise",
            "example": "Squat"
          },
          "weight_kg": {
            "type": "number",
            "title": "Weight Kg",
            "example": 300.0
          },
          "reps": {
            "type": "integer",
            "title": "Reps",
            "example": 1
          }
        },
        "type": "object",
        "required": [
          "exercise",
          "weight_kg",
          "reps"
        ],
        "title": "Lift"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    },
    "securitySchemes": {
      "APIKeyHeader": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-KEY"
      }
    }
  }
}